{{page-title 'Index'}}
<LinkTo
    @route='results'
    class='-mr-[6px] w-full flex flex-row items-center justify-end text-blue-700 dark:text-yellow-400
        {{if
            this.weights.isCalculationDisabled
            "cursor-not-allowed opacity-30"
        }}'
    {{did-insert this.initSettings}}
>
    <span class='text-2xl font-semibold'>Calculate</span>
    <HeroIcon class='w-8 stroke-2' @icon='chevron-right' />
</LinkTo>
<header class='my-2 text-3xl font-bold'>Weight Calculator</header>
<Controls
    @bars={{this.model.bars}}
    @handleBarChange={{this.handleBarChange}}
    @isLegPress={{this.weights.isLegPress}}
    @legPressPlateSet={{this.weights.legPressPlateSet}}
    @plates={{this.model.plates}}
    @plateSet={{this.weights.plateSet}}
    @selectedBar={{this.weights.selectedBar}}
    @weight={{this.weights.weight}}
/>